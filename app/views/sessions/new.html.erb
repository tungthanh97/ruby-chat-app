<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session , url: login_path ,local: true) do |form| %>
        <div class="ui form">
          <div class="field">
            <%= form.label :name, "Username" %>
              <div class="ui left icon input">
                <%= form.text_field :name , placeholder: 'Enter you email' %>
                  <i class="user icon"></i>
              </div>
          </div>
          <div class="field">
            <%= form.label :password, "Password" %>
              <div class="ui left icon input">
                <div class="ui left icon input">
                  <%= form.password_field :password , placeholder: 'Enter you password' %>
                    <i class="lock icon"></i>
                </div>
              </div>
          </div>
              <%= form.button "Login", class: "ui blue submit button" %>
          <% end %>
        </div>
        <div class="middle aligned column">
          <div class="ui big button">
            <i class="signup icon"></i>
            Sign Up
          </div>
        </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
